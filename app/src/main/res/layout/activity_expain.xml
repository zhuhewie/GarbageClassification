<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.main.ExpainActivity"
        android:padding="@dimen/padding_15"
        >
    
    <ImageView
            android:id="@+id/imgGarbage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
    
    <TextView
            android:id="@+id/tvGarbage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可回收是指:"
            android:textColor="@color/colorTitleText"
            android:textSize="17sp"
            app:layout_constraintLeft_toRightOf="@+id/imgGarbage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/margin_30"
            
            />
    <TextView
            android:id="@+id/tvGarbageEx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="可回收是指:"
            android:textColor="@color/colorTitleText"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/imgGarbage"
            app:layout_constraintTop_toBottomOf="@id/tvGarbage"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/margin_30"
            android:layout_marginLeft="@dimen/margin_30"
            
            />
    
    <TextView
            android:id="@+id/tvInclude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_7"
            android:paddingBottom="@dimen/padding_7"
            app:layout_constraintTop_toBottomOf="@id/imgGarbage"
            tools:text="可回收主要包括"
            android:gravity="center_horizontal"
            android:textColor="@color/colorTitleText"
            />
    <TextView
            android:id="@+id/tvIncludeAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_7"
            android:paddingBottom="@dimen/padding_7"
            app:layout_constraintTop_toBottomOf="@id/tvInclude"
            tools:text="酱油瓶、玻璃杯、平板玻璃、易拉罐、饮料瓶、 洗发水瓶、塑料玩具、书本、报纸、广告单、 纸板箱、衣服、床上用品等"
            android:gravity="center_horizontal"
            android:textColor="@color/colorMainMess"
            />
    <TextView
            android:id="@+id/tvRequire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_7"
            android:paddingBottom="@dimen/padding_7"
            app:layout_constraintTop_toBottomOf="@id/tvIncludeAll"
            tools:text="可回收物品投放要求"
            android:gravity="center_horizontal"
            android:textColor="@color/colorTitleText"
            />
    
    <TextView
            android:id="@+id/tvRequireContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_7"
            android:paddingBottom="@dimen/padding_7"
            app:layout_constraintTop_toBottomOf="@id/tvRequire"
            tools:text="• 轻投轻放• 清洁干燥，避免污染• 废纸尽量平整
"
            android:gravity="center_horizontal"
            android:textColor="@color/colorMainMess"
            />




</android.support.constraint.ConstraintLayout>